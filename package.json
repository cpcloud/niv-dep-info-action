{
  "name": "niv-dep-info-action",
  "version": "1.0.0",
  "private": true,
  "description": "Get information about niv dependencies",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint .",
    "package": "ncc build --no-source-map-register --license licenses.txt --target es2019",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cpcloud/niv-dep-info-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "git",
    "github",
    "niv",
    "dependencies",
    "nix"
  ],
  "author": "Phillip Cloud <417981+cpcloud@users.noreply.github.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.5.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.1",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@types/eslint": "^7.28.0",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vercel/ncc": "^0.31.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.4.0",
    "semantic-release": "^17.4.7",
    "typescript": "^4.4.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/*",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  }
}
